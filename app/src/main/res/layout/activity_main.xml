<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededf0">

    <LinearLayout
        android:id="@+id/firstButtonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstButton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/btn_back_ground"
            android:elevation="8dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/btn_back_ground"
            android:elevation="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondButtonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/firstButtonRow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/btn_back_ground"
            android:elevation="8dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:background="@drawable/btn_back_ground"
            android:elevation="8dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="@drawable/banner_style"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/secondButtonRow" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/bottom_menu"
        android:elevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:layout_weight="1"
                style="@style/home_icons"
                android:background="@drawable/bottom_menu_icon_shapes"
                android:elevation="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wallet"
                android:layout_weight="1"
                style="@style/home_icons"
                android:background="@drawable/bottom_menu_icon_shapes"
                android:elevation="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_weight="1"
                style="@style/home_icons"
                android:background="@drawable/bottom_menu_icon_shapes"
                android:elevation="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:layout_weight="1"
                style="@style/home_icons"
                android:background="@drawable/bottom_menu_icon_shapes"
                android:elevation="15dp"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>